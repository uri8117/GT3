    <persistence xmlns="https://jakarta.ee/xml/ns/persistence"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
                 version="3.1">
        <persistence-unit name="gt3_rep_mysql" transaction-type="RESOURCE_LOCAL">
            <description>gt3 repository</description>
            <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

            <class>cat.uvic.teknos.gt3.file.jpa.models.BrandImpl</class>
            <class>cat.uvic.teknos.gt3.file.jpa.models.BrandDataImpl</class>
            <class>cat.uvic.teknos.gt3.file.jpa.models.CarImpl</class>
            <class>cat.uvic.teknos.gt3.file.jpa.models.CarDataImpl</class>
            <class>cat.uvic.teknos.gt3.file.jpa.models.CircuitImpl</class>
            <class>cat.uvic.teknos.gt3.file.jpa.models.DriverImpl</class>
            <class>cat.uvic.teknos.gt3.file.jpa.models.RaceImpl</class>
            <class>cat.uvic.teknos.gt3.file.jpa.models.RaceDriverImpl</class>
            <class>cat.uvic.teknos.gt3.file.jpa.models.RaceDriverIdImpl</class>

            <properties>
                <property name="hibernate.archive.autodetection" value="class, hbm"/>
                <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
                <property name="jakarta.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
                <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost/gt3_rep_jpa"/>
                <property name="jakarta.persistence.jdbc.user" value="root"/>
                <property name="jakarta.persistence.jdbc.password" value="Floquet2008"/>
                <property name="hibernate.show_sql" value="true"/>
                <property name="hibernate.format_sql" value="true"/>
                <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
                <property name="jakarta.persistence.sql-load-script-source" value="/data.sql"/>
            </properties>
        </persistence-unit>
    </persistence>